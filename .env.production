# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Neon Cloud Database Configuration
# Get your production DATABASE_URL from Neon Console: https://console.neon.tech/
# Format: postgres://user:password@ep-xyz.us-east-1.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=your_neon_cloud_database_url_here

# JWT Configuration
# CRITICAL: Use a strong, unique secret in production
JWT_SECRET=your_super_secure_production_jwt_secret_here

# Logging Configuration
LOG_LEVEL=info

# Production-specific settings
COOKIE_MAX_AGE=3600000  # 1 hour
BCRYPT_SALT_ROUNDS=12

# Optional: Additional production configurations
# CORS_ORIGIN=https://yourapp.com
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000